extends content-base
block content
  .panel.panel-default.which-article-wrapper.featured-panel-wrapper
        .panel-heading
          h3.panel-title Where would you like to feature this article?
        .panel-body.pick-content-type
           .radio
             label(for="bump-content-radio")
               input#bump-content-radio(type='radio', name='articleLocation', value='bump')
               |     Bump all (this goes to main, main goes to second)
             label(for="none-content-radio")
               input#none-content-radio(type='radio', name='articleLocation', value='-1', checked='')
               |     Not front Page
block publishbutton
  button.btn.btn-default.publish.publish-btn-sidebar(onclick="setArticleType(true)" type="button", disabled="") Publish!
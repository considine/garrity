extends layout

block content
  div#step2
    div(style="text-align: center;")
      h3 Screen Size
      h5 Set the position for each screen size. This is how the image will appear in your article
      nav(aria-lavel="...")
        ul.pagination
          li#xsli.screen-size-indic
            a(href="#") XS 
              span.sr-only (current)
          li#smli.screen-size-indic
            a(href="#") SM 
              span.sr-only (current)
          li#mdli.screen-size-indic
            a(href="#") MD 
              span.sr-only (current)
          li#lgli.active.screen-size-indic
            a(href="#") LG
              span.sr-only (current)
    div.myContainer
      div.image-holder-wrapper
        div.image-holder#image-holder(style="background-image: url('/images/#{imgsrc}');")
    div#arrows
      nav(aria-lavel="...")
        ul.pager
          li#zoom-in-button(style="cursor: pointer;")
            a -
          li#zoom-out-button(style="cursor: pointer;")
            a +
    div.submitImage
      button.submitImageButton.btn.btn-default Go!
    